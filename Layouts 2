  <script>
    // Basic JavaScript: toggle between two background colors
    let isDefault = true;

    function changeBackground() {
      if (isDefault) {
        document.body.style.background = "#e6f7ff"; // light blue
      } else {
        document.body.style.background = "#f4f4f4"; // default gray
      }
      isDefault = !isDefault; // flip the state
    }
  </script>

